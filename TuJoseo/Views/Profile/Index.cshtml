        var selectedText = $(this).text();
        $("#dropdownMenuButton").text(selectedText);
    });

    function updateRole(roleID, roleName) {
        // Actualizar el texto del botón con el nombre seleccionado
        $('#dropdownMenuButton').text(roleName);
        // Almacenar el ID en el campo oculto
        $('#inputRoleId').val(roleID);
    }

    function updateRole(roleID, roleName) {
        // Actualizar el texto del botón con el nombre seleccionado
        $('#dropdownMenuButton').text(roleName);
        // Almacenar el ID y el nombre en los campos ocultos
        $('#inputRoleId').val(roleID);
        $('#inputRoleName').val(roleName);
    }

    function saveChangesUser() {
        // Obtener valores de los controles
        var userID = $('#userID').val();
        var userName = $('#inputUserName').val();
        var education = $('#inputEducation').val();
        var location = $('#inputLocation').val();
        var skills = $('#inputSkills').val();
        var roleID = $('#inputRoleId').val();
        var roleName = $('#inputRoleName').val();
        var phone = $('#inputPhone').val();

        // Construir el objeto updatedUser
