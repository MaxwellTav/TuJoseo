@model UserModel
@{
    ViewData["Title"] = "Perfil";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Perfíl</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-3">

                            <!-- Profile Image -->
                            <div class="card card-primary card-outline">
                                <div class="card-body box-profile">
                                    <div class="text-center">
                                        <img class="profile-user-img img-fluid img-circle"
                                             src="~/adminlte/dist/img/user4-128x128.jpg"
                                             alt="User profile picture">
                                    </div>

                                    <h3 class="profile-username text-center">@Model.UserName</h3>

                                    <p class="text-muted text-center">@Model.UserRol</p>

                                    <ul class="list-group list-group-unbordered mb-3">
                                        <li class="list-group-item">
                                            <b>Calidad de trabajo</b> <a class="float-right">@(Model.UserJobQuality)%</a>
                                        </li>
                                        <li class="list-group-item">
                                            <b>Simpatía</b> <a class="float-right">@(Model.UserSimpaty)%</a>
                                        </li>
                                        <li class="list-group-item">
                                            <b>Stalkers</b> <a class="float-right">@(Model.UserStalkers) personas</a>
                                        </li>
                                    </ul>

                                    @*<a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>*@
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <!-- About Me Box -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Sobre mí</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <strong><i class="fas fa-book mr-1"></i> Educación</strong>

                                    <p class="text-muted">
                                        @Model.UserEducation
                                    </p>

                                    <hr>

                                    <strong><i class="fas fa-map-marker-alt mr-1"></i> Ubicación</strong>

                                    <p class="text-muted">@Model.UserLocation</p>

                                    <hr>

                                    <strong><i class="fas fa-pencil-alt mr-1"></i> Skills / Habilidades</strong>

                                    <p class="text-muted">
                                        @Model.UserHabilities
                                    </p>

                                    <hr>

                                    <strong><i class="far fa-file-alt mr-1"></i> Notes</strong>

                                    <p class="text-muted">@Model.UserNotes</p>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-9">
                            <div class="card">
                                <div class="card-header p-2">
                                    <ul class="nav nav-pills">
                                        <li class="nav-item"><a class="nav-link active" href="#reviews" data-toggle="tab">Reseñas</a></li>
                                        <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Actividad</a></li>
                                        <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Configuraciones</a></li>
                                    </ul>
                                </div><!-- /.card-header -->
                                <div class="card-body">
                                    <div class="tab-content">
                                        <!-- /.tab-pane REVIEWS -->
                                        <div class="active tab-pane" id="reviews">
                                            @if (Model.Reviews != null && Model.Reviews.Count > 0)
                                            {
                                                <!-- The timeline -->
                                                <div class="timeline timeline-inverse">
                                                    @foreach (ReviewModel review in Model.Reviews)
                                                    {
                                                        <div>
                                                            <i class="fas fa-envelope bg-info"></i>

                                                            <div class="timeline-item">
                                                                <span class="time"><i class="far fa-clock"></i> @review.ReviewDate.ToString("dd/MMMM/yyyy").ToUpperInvariant()</span>

                                                                <h3 class="timeline-header"><a href="#">@review.ReviewCriticadorID</a> cometó</h3>

                                                                <div class="timeline-body">
                                                                    @review.ReviewDescription
                                                                </div>
                                                            </div>
                                                        </div>

                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="card card-primary card-outline">
                                                    <h3 class="m-2 text-center">¡AQUÍ NO HAY NADA!</h3>
                                                    <p class="card-text text-center">
                                                        No se han encontrado comentarios...
                                                    </p>
                                                    <div class="text-center">
                                                        <a class="btn btn-app btn-lg btn-warning">
                                                            <iconify-icon icon="tabler:file-sad" width="35" height="35"></iconify-icon>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <!-- /.tab-pane -->

                                        <!-- /.tab-pane TIMELINE-->
